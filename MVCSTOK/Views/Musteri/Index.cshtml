@using MVCSTOK.Models.Entity
@model List<Musteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index","Musteri",FormMethod.Get))
{
<p>
    Aranacak Müşteri Adı: @Html.TextBox("p")
    <input type="submit" value="Ara" />
</p>
}
<table class="table table-bordered">
    <tr>
        <th>Musteri ID</th>
        <th>Musteri Adı</th>
        <th>Musteri Soyadı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Alert</th>

    </tr>
    <tbody>
        @foreach (var musteri in Model)
        {
            <tr>
                <th>@musteri.MusteriID</th>
                <td>@musteri.MusteriAd</td>
                <td>@musteri.MusteriSoyad</td>
                <td><a href="/Musteri/Sil/@musteri.MusteriID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Musteri/MusteriGetir/@musteri.MusteriID" class="btn btn-success">Guncelle</a></td>
                <td>@Html.ActionLink("Sil Butonu", "Sil", new { id = musteri.MusteriID }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten silmek istiyor musunuz?')" })</td>
            </tr>
            }
    </tbody>
</table>
<a href="/Musteri/YeniMusteri/" class="btn btn-primary">Yeni Musteri Ekle</a>